<Window x:Class="HospitalManagementSystem.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalManagementSystem"
        mc:Ignorable="d"
        Title="Change Password" Height="255" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Old Password" Margin="10,10, 0, 0"/>
        <PasswordBox x:Name="txtOldPassword" Width="180" HorizontalAlignment="Left" Margin="10,0,0,0" />
        <Label Content="New Password" Margin="10,10,0,0"/>
        <PasswordBox x:Name="txtNewPassword" Width="180" HorizontalAlignment="Left" Margin="10,0,0,10"/>
        <Button x:Name="btnConfirm" Content="Confirm" Width="90" Height="32" FontSize="14" Margin="0,15,0,0" Padding="0,0,0,0" Click="btnConfirm_Click" IsDefault="True"/>
        <Button x:Name="btnCancel" Content="Cancel" Width="60" Height="25" FontSize="12" Margin="0,10,0,0" Padding="0,0" Background="Red" BorderBrush="#FFFB3232" Click="btnCancel_Click" IsCancel="True"/>
    </StackPanel>
</Window>
